<UserControl x:Class="WingetContract.View.TimeWingetReduce"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyMirror.ViewModel.Winget"
			 xmlns:winget="clr-namespace:MyMirror.ViewModel.Winget"
			 mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800" FontFamily="Calibri">

	<UserControl.DataContext>
		<winget:TimeVM/>
	</UserControl.DataContext>

	<Grid >
		<Label Content="{Binding CurrentTimeWithSecString}" 
			   HorizontalAlignment="Left"
			   HorizontalContentAlignment="Right"
			   FontSize="{Binding SizeDict[9]}"/>

	</Grid>
</UserControl>
